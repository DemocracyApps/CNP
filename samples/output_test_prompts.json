{
    "name": "Global Giving Auto-Interactive Input Composer",
    "version": "0.01",
    "elements": [
        {
            "id":"Story",
            "required": false,
            "type":"Story"
        },
        {
            "id":"Topic",
            "type":"Tag"
        },
        {
            "id":"Person",
            "type":"Person"
        }
    ],
    "relations": [
        {
            "type": "causes",
            "from": "Person",
            "to":   "Story"
        },
        {
            "type": "tags",
            "from": "Topic",
            "to":   "Story"
        }
    ],
    "input": {
	    "inputType": "auto-interactive",
        "anchor":"Story",
	    "map": [
            {
    			"id":"1",
    			"use":"element",
    			"elementId":"Story",
    			"inputType":"textarea",
    			"prompt":"Please tell a story about a time when a person or an organization tried to help someone or change something in your community.",
                "outputPrompt":"This is a story about a person or organization helping someone",
                "properties": [
                    {
                        "name":"branchDecorators",
                        "value":"5,4"
                    },
                    {
                        "name":"silliness",
                        "value":"A whole lot"
                    }
                ]
    		},
    		{
    			"id":"3",
    			"use":"title",
    			"inputType":"text",
    			"prompt":"Give your story a title"
    		},
    		{
    			"id":"4",
    			"use":"element",
    			"elementId": "Topic",
    			"inputType":"text",
                "outputPrompt":"Tags",
    			"prompt":"What is this story about?"
    		},
    		{
    			"id":"personinput",
    			"use":"element",
    			"elementId": "Person",
    			"inputType":"person",
    			"prompt":"Name the person most involved in what happened."
    		}
	   ]
    }
}

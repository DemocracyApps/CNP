{
    "name": "Global Giving Auto-Interactive Input Composer",
    "version": "0.01",
    "elements": [
        {
            "id":"Story",
            "required": false,
            "type":"Story"
        },
        {
            "id":"Topic",
            "type":"Tag"
        },
        {
            "id":"Organization",
            "type":"StoryElement"
        },
        {
            "id":"Summary",
            "type":"StoryElement"
        }
    ],
    "relations": [
        {
            "type": "Causes",
            "from": "Organization",
            "to":   "Story"
        },
        {
            "type":"Link",
            "from":"Summary",
            "to":"Story"
        },
        {
            "type": "Tags",
            "from": "Topic",
            "to":   "Story"
        }
    ],
    "output": {
        "defaultLayout":"right_sidebar",
        "map": [
            {
                "id":"1",
                "use":"title",
                "source":"element.name",
                "elementId":"Story",
                "content":"Section Title", // not being used here.
                "location":"left"
            },
            {
                "id":"2",
                "use":"element",
                "elementId":"Summary",
                "header":"Summary",
                "location":"left"
            },
            {
                "id":"3",
                "use":"link",
                "text":"Full Story",
                "link":"FullStory",
                "location":"left"
            },
            {
                "id":"4",
                "use":"element",
                "elementId": "Topic",
                "header":"Tags",
                "location":"right"
            },
            {
                "id":"t2",
                "use":"title",
                "source":"this",
                "content":"Section Title", // not being used here.
                "location":"right"
            },
            {
                "use":"break" // We don't want to go to the full story by default
            },
            {
                "use":"pageinfo",
                "id":"FullStory"
            },
            {
                "id":"5",
                "use":"title",
                "source":"element.name",
                "elementId":"Story",
                "location":"left",
                "after":" - The Full Story"
            },
            {
                "id":"6",
                "use":"element",
                "elementId":"Story",
                "location":"left"
            },
            {
                "id":"7",
                "use":"element",
                "elementId": "Topic",
                "header":"Tags",
                "location":"right"
            }
        ]
    },
    "input": {
        "inputType": "auto-interactive",
        "map": [
            {
                "id":"1orso",
                "use":"element",
                "elementId":"Story",
                "inputType":"textarea",
                "prompt":"Please tell a story about a time when a person or an organization tried to help someone or change something in your community."
            },
            {
                "id":"2",
                "use":"element",
                "elementId":"Summary",
                "inputType":"textarea",
                "prompt":"Write a summary for this story"
            },
            {
                "use":"pagebreak"
            },
            {
                "id":"3",
                "use":"title",
                "inputType":"text",
                "prompt":"Give your story a title"
            },
            {
                "id":"4",
                "use":"element",
                "elementId": "Topic",
                "inputType":"text",
                "prompt":"What is this story about?"
            },
            {
                "id":"anythingIwant",
                "use":"element",
                "elementId": "Organization",
                "inputType":"text",
                "prompt":"Name the organization or group most involved in what happened."
            }
       ]
    }
}

{
    "name": "Global Giving Composer Specification",
    "version": "0.01",
    // The ID here is used by input specs to refer to these elements. IDs must be unique within this file.
    "elements": [
        {
            "id":"Title",
            "required": true,
            "type":"CnpComposition"
        },
        {
            "id":"Story",
            "required": true,
            "type":"Story"
        },
        {
            "id":"Topic",
            "type":"Tag"
        },
        {
            "id":"Organization",
            "type":"StoryElement"
        }
    ],
    "relations": [
        {
            "type": "causes",
            "from": "Organization",
            "to":   "Story"
        },
        {
            "type": "tags",
            "from": "Topic",
            "to":   "Story"
        }
    ]
}

{
    "name": "Global Giving Auto-Interactive Input Composer",
    "version": "0.01",
    "baseSpecificationId": 1,
    "input": {
	    "inputType": "auto-interactive",
	    "map": [
            {
                "id":"1",
                "use":"decision",
                "inputType":"select",
                "prompt":"Do you want to share a new story or connect to one you've already share?",
                "options": [
                    {
                        "display":"---",
                        "value":null                        
                    },
                    {
                        "display":"New Story",
                        "value":"new1"                        
                    },
                    {
                        "display":"Existing Story",
                        "value":"old1"                        
                    }
                ]
            },
            {
                "id":"user",
                "use":"element",
                "elementId":"Storyteller",
                "inputType":"auto",
                "inputValue":"!user"
            },
            {
                "use":"break"
            },
            {
                "id":"new1",
                "use":"element",
                "inputType":"text",
                "elementId":"Title",
                "prompt":"Give your story a title"
            },
            {
    			"id":"new2",
    			"use":"element",
    			"elementId":"Story",
    			"inputType":"textarea",
                "pickType":"CnpComposition",
    			"prompt":"Tell your own story."
    		},
            {
                "use":"break"
            },
            {
                "id":"old1",
                "use":"element",
                "elementId":"Title",
                "inputType":"pickElement",
                "pickType":"CnpComposition",
                "prompt":"Pick your story"
            }
            // {
            //     "id":"old1",
            //     "use":"element",
            //     "elementId":"Story",
            //     "inputType":"textarea",
            //     "pickType":"CnpComposition",
            //     "prompt":"Tell your own story."
            // }
	   ]
    }
}

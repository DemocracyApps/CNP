{
    "name": "Global Giving Composer Specification",
    "version": "0.01",
    // The ID here is used by input specs to refer to these elements. IDs must be unique within this file.
    "elements": [
        {
            "id":"Title",
            "required": true,
            "type":"CnpComposition"
        },
        {
            "id":"Story",
            "type":"Story"
        },
        {
            "id":"Storyteller",
            "required": true,
            "type":"Person"
        },
        {
            "id":"Summary",
            "type":"Tag"
        },
        {
            "id":"Organization",
            "type":"Organization"
        },
        {
            "id":"City",
            "type":"Place"
        },
        {
            "id":"Topic",
            "type":"Tag"
        },
        {
            "id":"Benefitees",
            "type":"Group"
        }
    ],
    "relations": [
        {
            "type": "causes",
            "from": "Organization",
            "to":   "Story"
        },
        {
            "type": "happened-in",
            "from": "Story",
            "to":   "City"
        },
        {
            "type": "benefitted",
            "from": "Story",
            "to": "Benefitees"
        },
        {
            "type": "tags",
            "from": "Topic",
            "to":   "Story"
        },
        {
            "type": "tags",
            "from": "Summary",
            "to":   "Story"
        },
        {
            "type": "is-creator-of",
            "from": "Storyteller",
            "to":   "Title"
        }
    ]
}

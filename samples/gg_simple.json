{
    "name": "Global Giving Auto-Interactive Input Composer",
    "version": "0.01",
    "baseSpecificationId": 1,
    "input": {
	    "inputType": "auto-interactive",
	    "map": [
            {
                "id":"3",
                "use":"element",
                "inputType":"text",
                "elementId":"Title",
                "prompt":"Give your story a title"
            },
            {
    			"id":"1",
    			"use":"element",
    			"elementId":"Story",
    			"inputType":"textarea",
    			"prompt":"Please tell a story about a time when a person or an organization tried to help someone or change something in your community."
    		},
            {
                "id":"user",
                "use":"element",
                "elementId":"Storyteller",
                "inputType":"auto",
                "inputValue":"!user"
            },
            {
                "id": "orgselector",
                "use":"element",
                "elementId":"Organization",
                "inputType":"select",
                "prompt":"Pick one of these, fool!",
                "options": [
                    {
                        "display":"---",
                        "value":"None"                        
                    },
                    {
                        "display":"Central Intelligence Agency",
                        "value":"CIA"                        
                    },
                    {
                        "display":"Federal Bureau of Investigation",
                        "value":"FBI"                        
                    },
                    {
                        "display":"Ministry of Silly Walks",
                        "value":"MSW"
                    }
                ]
            },
            {
                "id": "connexionselector",
                "use":"relation",
                "from":"Storyteller",
                "to":"Story",
                "inputType":"select",
                "prompt":"What is your connection to what happened in the story?",
                "options": [
                    {
                        "display":"---",
                        "value":null                        
                    },
                    {
                        "display":"Helped make it happen",
                        "value":"helped"                        
                    },
                    {
                        "display":"Was affected by what happened",
                        "value":"was-affected-by"                        
                    },
                    {
                        "display":"Saw it happen",
                        "value":"saw"                        
                    },
                    {
                        "display":"Heard about it happening",
                        "value":"heard-about"                        
                    },
                    {
                        "display":"Unknown",
                        "value":"unknown-relation-to"                        
                    }
                ]
            }
	   ]
    }
}
